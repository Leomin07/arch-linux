Config { 
  font = "xft:Monospace-9"
, additionalFonts = []
, border = BottomB
, borderColor = "#2e3436"
, bgColor = "#2e3436"
, fgColor = "#d3d7cf"
, position = Top
, lowerOnStart = True
, iconRoot = ".xmobarrc/icons"
, commands = 
    [ Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
    , Run Cpu ["-L","3","-H","50","--normal","#ff0000","--high","#ff0000"] 10
    , Run Memory ["-t","Mem: <usedratio>%"] 10
    , Run DiskU [("/", "<free>")] [] 10
    ]
, sepChar = "%"
, alignSep = "}{"
, template = "%date% %cpu% %memory% %disku% }{"
}
